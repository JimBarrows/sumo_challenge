    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button( type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false" aria-controls="navbar" ).navbar-toggle.collapsed
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Sumo Slack
                .navbar-collapse.collapse
                    .navbar-right

                        if (typeof(user) == 'undefined')
                            a(id="login" href="/user/login").btn.btn-default Login
                            a(id="register" href="/user/register").btn.btn-default Register
                        else if ( login )
                            a(id="register" href="/user/register").btn.btn-default Register
                        else
                            a(id="logout" href="/user/logout") Log Out

        .container-fluid
            block content
